<%= render 'shared/banner' %>
<div class="container">
  <div class="explanation">
    <h2>How it works</h2>
    <ul>
      <li>Join</li>
      <li>Customize</li>
      <li>SOS</li>
      <li>Talk</li>
    </ul>
  </div>

  <div class="cocktails">
  <% @cocktails.each do |cocktail| %>
    <%= link_to cocktail.name, cocktail_path(cocktail)%>
    <%= cl_image_tag cocktail.photo, height: 300, width: 400, crop: :fill %>
    <% cocktail.doses.each do |dose| %>
      <%= dose.description %>
      <%= dose.ingredient.name %>
    <% end %>
  <% end %>
  </div>
</div>
<%= link_to 'create new cocktail', new_cocktail_path  %>
